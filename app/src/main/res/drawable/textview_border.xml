<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#FFFFFF" />

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#673AB7" />  <!-- tím -->

    <!-- Bo góc (tùy chọn) -->
    <corners android:radius="20dp" />

    <!-- Khoảng cách bên trong (tùy chọn) -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />
</shape>
